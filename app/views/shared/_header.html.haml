%ul.breadcrumb
  %li
    = link_to 'Plants', plants_url
  - if @plant
    %li
      %span.divider >
      = link_to @plant.name, plant_url(@plant)
  - if @frame
    %li
      %span.divider >
      = link_to "Frame", plant_frame_url(@frame.plant, @frame)
  - if @cell
    %li
      %span.divider >
      = link_to "Cell: #{@cell.uid}", plant_frame_cell_url(@cell.frame.plant, @cell.frame, @cell)
