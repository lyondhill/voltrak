#plants.index
  %h1.page-header Plants
  %table.table.table-condensed.table-hover
    %thead
      %tr
        %th #
        %th 
          %i.icon-sitemap
          Plant Name
        %th
          %i.icon-dashboard
          Plant Temp
        %th
          %i.icon-th
          Frames
    %tbody
      - @plants.each_with_index do |p,i|
        %tr
          %td= i+1
          %td= link_to p.name, plant_url(p)
          %td
            %span.label{class: "label-#{setTempStatus(p.temperature)}"}= formatNumber(p.temperature)
          %td= p.frames.count